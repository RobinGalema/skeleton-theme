<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {% for item in collections['frontpage'].products %}
        <div class="flex flex-col">
            <a href="{{ item.url }}" class="block mb-4">
                {% if item.images.size > 0 %}
                    <img src="{{ item.images.first | image_url: width: 500 }}" alt="{{ item.title }}" width="500" height="500" class="w-full h-auto object-cover">
                {% else %}
                    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                        <span class="text-gray-500">No Image</span>
                    </div>
                {% endif %}
            </a>
            <h2 class="text-lg font-semibold mb-2">
                <a href="{{ item.url }}">{{ item.title }}</a>
            </h2>
            <p class="text-gray-700 mb-4">{{ item.price | money }}</p>
            {% assign first_variant = item.variants.first %}
            {% render 'add-to-cart', variant: first_variant, cart_item: cart.items | where: "variant_id", first_variant.id | first %}
        </div>
    {% endfor %}
</div>